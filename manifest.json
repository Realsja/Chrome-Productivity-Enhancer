{
    "name": "Productivity Enhancer",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Block social media websites for a more productive afternoon.",
    "options_page": "options.html",
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Productivity Enhancer",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
      },

    "permissions": ["activeTab", "declarativeContent", "storage","webRequest", "webRequestBlocking", "tabs", "http://*/*",
        "https://*/*"],

    "icons": {
        "128": "icon.png"
    }
}